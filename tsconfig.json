{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "build",
    "strict": true,
    "lib": [
      "es2019"
    ],
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false
  },
  "include": [
    ".eslintrc.js",
    "src/**/*.ts",
    "test/**/*.ts", "utils/test.ts",
  ]
}